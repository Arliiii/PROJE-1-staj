source "https://rubygems.org"

ruby "3.4.6"

# Rails framework
gem "rails", "~> 8.0.2", ">= 8.0.2.1"

# Database
gem "pg", "~> 1.1"

# Asset pipeline
gem "sprockets-rails", ">= 2.0.0"

# Web server
gem "puma", ">= 5.0"

# JSON serialization
gem "jbuilder"

# Redis for caching/sessions
gem "redis", ">= 4.0.1"

# Boot optimization
gem "bootsnap", require: false

# Image processing
gem "image_processing", "~> 1.2"

# CORS handling
gem "rack-cors"

# Environment variables
gem "dotenv-rails"

# CSV parsing (required for Ruby 3.4+)
gem "csv"

# Search and filtering
gem "ransack"

group :development, :test do
  # Debugging - fix the debug gem issue
  gem "debug", "~> 1.7", platforms: %i[ mri ]
  gem "rspec-rails"
  gem "factory_bot_rails"
end

group :development do
  gem "web-console"
  gem "listen", "~> 3.3"
  gem "spring"
end

